=form_for @user, :html => { :multipart => true } do |f|
  -if @user.errors.any?
    #error_explenation
      =pluralize(@user.errors.count, "error")

      %ul
        -@user.errors.full_messages.each do |msg|
          %li= msg
  
  %h2 
    %span.icon=image_tag 'info_icon.png'
    Podstawowe dane:
  .section 
    %ul
      %li
        =f.label :name, "Imię: "
        =f.text_field :name
      %li
        =f.label :surname, "Nazwisko: "
        =f.text_field :surname
      %li.last
        =f.label :email, "Email: "
        =f.text_field :email
  %h2 
    %span.icon=image_tag 'question_icon.png'
    Opcjonalne dane:
  .section
    %ul 
      %li.last
        =f.label "Twoje zdjęcie: "
        =f.file_field :photo
  
  =link_to 'zmiana hasła', :action => 'change_password'
  .section
    =f.submit "Zapisz zmiany"
