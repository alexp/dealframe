<%= form_for(@company, :html => { :multipart => true }) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2 class="error_head">Ooops! Wystąpiły błędy przy aktualizacji danych firmy</h2>

      <ul class="error_list">
      <% @company.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2>
    <span class="icon"><%= image_tag 'info_icon.png' %>
    </span>
      Edycja firmy
  </h2> 
  <div class="section">
  <ul>
  <li>
    <%= f.label "Logo" %>
    <%= f.file_field :logo %>
  </li>
  <li>
    <%= f.label :category_id %>
    <%= f.collection_select(:category_id, Category.all, :id, :name, { :prompt => true}) %>
  </li> 
  <li>
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </li>
  <li>
    <%= f.label :short_name %>
    <%= f.text_field :short_name %>
  </li>
  <li>
    <%= f.label :address %>
    <%= f.text_area :address %>
  </li>
  <li>
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %>
  </li>
  <li>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </li>
  <li>
    <%= f.label :nip %>
    <%= f.text_field :nip %>
  </li>
  <li>
    <%= f.label :regon %>
    <%= f.text_field :regon %>
  </li>
  <li>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </li>
  <li class="last">
    <%= f.label :vat %>
    <%= f.check_box :vat %>
  </li>
  <div class="actions">
    <%= f.submit "Zaktualizuj firmę", :style => "margin-top: 20px" %>
  </div>
  </div>
<% end %>
