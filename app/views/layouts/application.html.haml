!!! XML
!!!
%html
  %head
    %title= @title
    %meta{:name => "robots", :content => "noindex", :charset => "utf-8"}
    = csrf_meta_tag
    = stylesheet_link_tag 'reset', 'style', 'text', 'tipsy'
    = javascript_include_tag :defaults
    = javascript_include_tag "jquery.countdown.js"
    = javascript_include_tag "jquery.cookie.js"
    = javascript_include_tag "jquery.tipsy.js"
    = javascript_include_tag "http://maps.googleapis.com/maps/api/js?sensor=true"
    %link{:href => "http://fonts.googleapis.com/css?family=Open+Sans:400,700|Signika", :rel=>"stylesheet", :type=>"text/css"}
  %body
    -if !cookies[:dealframe_cookie]
      #top-info
        Witamy w Dealframe - Wersja alpha 0.1
        %span.close-btn zamknij
    .wrapper
      =render :partial => 'shared/header'
      =yield(:company_profile) if @content_for_company_profile
      #content-wrapper
        #left-col
          %div{:class => "page", :id => "page-#{params[:controller]}-#{params[:action]}"}
            =yield
            .clear
        #right-col
          #sidebar
            =image_tag 'how_it_works.png'
            =image_tag 'separator.png'
            -#=image_tag 'partners.png'
            %h5 Promowane firmy
            =link_to "Hermanowa Wola", :controller => "companies", :action => "show", :id => "1"
            %br
            =link_to "Vedia", :controller => "companies", :action => "show", :id => "12"
            %br
        .clear
      =render 'shared/footer'
