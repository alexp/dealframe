!!! XML
!!!
%html
  %head
    %title= @title
    %meta{:name => "robots", :content => "noindex"}
    = csrf_meta_tag
    = stylesheet_link_tag 'reset', 'style', 'text', 'user' 
    = javascript_include_tag :defaults
    = javascript_include_tag "jquery.countdown.js"
    %link{:href => "http://fonts.googleapis.com/css?family=Droid+Sans", :rel => "stylesheet", :type => "text/css"}
  %body.user
    -if !cookies[:dealframe_cookie]
      #top-info 
        Witamy w Dealframe - Wersja alpha 0.1
        %span.close-btn zamknij
    .wrapper

      =render :partial => 'shared/header' 

      #left-col
        %ul 
          %li{:class => params[:action]=="edit"?"active":""} 
            =link_to 'Twoje konto', :controller => 'users', :action => 'edit'
          %li{:class => params[:action]=="couppons"?"active":""} 
            =link_to 'Twoje kupony', :controller => 'users', :action => 'couppons' 
          %li{:class => params[:action]=="following"?"active":""} 
            =link_to 'Obserwowane', :controller => 'users', :action => 'following' 
      #right-col
        #top-nav
          %h1
            Panel uÅ¼ytkownika -
            %span 
              =@page_name
        %div{:class => "page", :id => "page-#{params[:controller]}-#{params[:action]}"}
          =yield
          .clear
      .clear
      =render 'shared/footer'
